<h1>List of <%= @type %></h1>

<a href="http://localhost:3000/<%= @type.downcase %>/new_form">Add New <%= @type %></a>
<!-- http://yousifdelvalle.com/wp-content/uploads/2014/09/Cerati.jpg -->
<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th colspan="3">Actions</th>

  <% @list.each do |dir| %>

  </tr>
    <td><img src="<%= dir.image_url %>" width="80"</td>
    <td><%= dir.name %></td>

    <td>
    <a href="http://localhost:3000/<%= @type.downcase %>/<%= dir.id %>">Show</a>
    </td>
    <td>
    <a href="http://localhost:3000/<%= @type.downcase %>/<%= dir.id %>/edit_form">Edit</a>
    </td>
    <td>
    <a href="http://localhost:3000/delete_<%= @type.downcase %>/<%= dir.id %>">Delete</a>
    </td>

  <tr>
  <% end %>

</table>
