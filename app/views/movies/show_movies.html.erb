<h1>List of Movies</h1>

<a href="http://localhost:3000/movies/new_form">Add New Movie</a>

<table>
  <tr>
    <th>Poster</th>
    <th>Title</th>
    <th colspan="3">Actions</th>

  <% @list.each do |mov| %>

  </tr>
    <td><img src="<%= mov.image_url %>" width="80"</td>
    <td><%= mov.title %></td>

    <td>
    <a href="http://localhost:3000/movies/<%= mov.id %>">Show</a>
    </td>
    <td>
    <a href="http://localhost:3000/movies/<%= mov.id %>/edit_form">Edit</a>
    </td>
    <td>
    <a href="http://localhost:3000/delete_movies/<%= mov.id %>">Delete</a>
    </td>

  <tr>
  <% end %>

</table>
